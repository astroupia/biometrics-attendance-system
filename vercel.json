{
  "version": 2,
  "builds": [
    {
      "src": "app/app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "buildCommand": "apt-get update && apt-get install -y cmake libopenblas-dev liblapack-dev && pip install -r requirements.txt"
      }
    },
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ],
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
  }
}
